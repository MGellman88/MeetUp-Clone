@model TheBelt.ViewModels.RegistrationViewModel

<form asp-action="Create" asp-controller="Auth" method="POST">
  <span asp-validation-for="FirstName"></span>
  <label asp-for="FirstName">First Name</label><br>
  <input asp-for="FirstName" type="text"><br>

  <span asp-validation-for="LastName"></span>
  <label asp-for="LastName">Last Name</label><br>
  <input asp-for="LastName" type="text"><br>

  <span asp-validation-for="EmailAddress"></span>
  <label asp-for="EmailAddress">Email</label><br>
  <input asp-for="EmailAddress" type="email"><br>

  <span asp-validation-for="Password"></span>
  <label asp-for="Password">Password</label><br>
  <input asp-for="Password" type="password"><br>

  <span asp-validation-for="PasswordConfirmation"></span>
  <label asp-for="PasswordConfirmation">Confirm Password</label><br>
  <input asp-for="PasswordConfirmation" type="password"><br><br>

  <input type="submit" value="submit">
</form>